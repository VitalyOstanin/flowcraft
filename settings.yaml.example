language: ru

llm:
  cheap_model: qwen-code
  expensive_model: kiro-cli
  expensive_stages:
    - security_review
    - architecture_design
    - complex_debugging

mcp_servers:
  - name: filesystem
    command: mcp-server-filesystem
    args: ["--root", "/workspace"]
  - name: git
    command: mcp-server-git
    args: []

trust_rules:
  "git status": always
  "git log": always
  "git diff": always

workflows_dir: ~/.flowcraft/workflows

agents: {}
